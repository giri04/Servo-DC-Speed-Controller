#include <Servo.h>
Servo myservo;
int pos = 0;

void setup() {
  myservo.attach(9);
}

void loop() {
  for (pos = 0; pos <= 180; pos += 1) { // langkah kecil
    myservo.write(pos); 
    delay(30); // semakin besar delay, semakin lambat servo
  }
  for (pos = 180; pos >= 0; pos -= 1) {
    myservo.write(pos);
    delay(30);
  }
}
#delay(30) → servo bergerak lambat (posisi bertahap).
#delay(5) → servo bergerak lebih cepat.
#Jika langsung myservo.write(180); dari posisi 0°, servo akan bergerak ke 180° dengan kecepatan maksimum bawaan.
